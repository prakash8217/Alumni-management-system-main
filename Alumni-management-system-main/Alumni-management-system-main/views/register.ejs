<h1 style="text-align: center; margin-top: 30px; margin-bottom: 30px;"> Sign up form </h1>
<div class="container" style="max-width: 600px;margin:0 auto;padding:50px;box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;">
    <form action="/register" method="post">
        <div class="form-group" style="margin-bottom:30px;">
            <input type="text" class="form-control" name="fullname" placeholder="Full Name:">
        </div>
        <div class="form-group" style="margin-bottom:30px;">
            <input type="email" class="form-control" name="username" placeholder="Email:">
        </div>
        <div class="form-group" style="margin-bottom:30px;">
            <input type="password" class="form-control" name="password" placeholder="Password(min length of 8):">
        </div>
        <div class="form-group" style="margin-bottom:30px;">
            <input type="number" class="form-control" name="Joining_Year" placeholder="Joining Year:" min="2000">
        </div>
        <div class="form-group" style="margin-bottom:30px;">
            <input type="number" class="form-control" name="Pass_Out_Year" placeholder="Pass Out Year:" min="2000" >
        </div>
        <div class="form-group" style="margin-bottom:30px;">
            <input type="tel" class="form-control" name="Phone_Number" placeholder="Phone Number:(10-digit)" pattern="[0-9]{10}" size="10">
        </div>
        <div class="form-group" style="margin-bottom:30px;">
            <input type="text" class="form-control" name="Job" placeholder="Job:(not working type NA)" >
        </div>
        <div class="form-group" style="margin-bottom:30px;">
            <input type="text" class="form-control" name="Company" placeholder="Company:(not working type NA)" >
        </div>
        <div class="form-group" style="margin-bottom:30px;">
            <input type="text" class="form-control" name="Further_Studies" placeholder="Further Studies:(if any enter else type NA)" >
        </div>
        <div class="form-btn" style="margin-bottom:30px;">
            <input type="submit" class="btn btn-primary" value="Register" name="submit">
        </div>
    </form>
</div>
